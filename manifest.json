{
    "manifest_version": 2,
    "name": "Alertover",
    "description": "Alertover extension in chrome",
    "version": "0.2.0",

    "background" : {
        "scripts" : ["/dist/js/background.js"]
    },

    "icons": {
        "48": "/imgs/default.png"
    },

    "browser_action": {
        "default_icon": {
            "48": "/imgs/default.png",
            "unactive": "/imgs/unactive.png",
            "active": "/imgs/active.png"
        },
        "default_popup": "/html/popup.html"
    },

    "permissions": [
        "activeTab",
        "notifications",
        "https://ajax.googleapis.com/",
        "http://test.api.alertover.com/"
    ]
}
